<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homemade.akhilez.timetable.editingActivities.ChooseTimeTable"
    tools:showIn="@layout/activity_choose_time_table">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set TimeTable"
        android:id="@+id/setTimeTable"
        android:onClick="setPreset"
        android:background="@color/color3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:clickable="true"
        android:textColor="#fff"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_marginTop="47dp"
        android:layout_centerHorizontal="true">

        <Spinner
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height"
            android:id="@+id/spinnerCollege"
            android:spinnerMode="dropdown"
            android:layout_column="1"
            android:layout_row="0" />

        <TextView
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Branch"
            android:id="@+id/branchText"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginLeft="8dp" />

        <Spinner
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height"
            android:id="@+id/spinnerBranch"
            android:spinnerMode="dropdown"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Section"
            android:id="@+id/sectionText"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="8dp" />

        <Spinner
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height"
            android:id="@+id/spinnerSection"
            android:spinnerMode="dropdown"
            android:layout_row="2"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Year"
            android:id="@+id/yearText"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginLeft="8dp" />

        <Spinner
            android:layout_width="@dimen/spinner_width"
            android:layout_height="@dimen/spinner_height"
            android:id="@+id/spinnerYear"
            android:spinnerMode="dropdown"
            android:layout_column="1"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="College"
            android:id="@+id/collegeText"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginLeft="8dp"
            android:paddingRight="50dp" />
    </GridLayout>

</RelativeLayout>
